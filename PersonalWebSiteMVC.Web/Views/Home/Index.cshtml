@model UserViewModel

@{
    ViewData["Title"] = $"{@Model.FirstName} {Model.LastName} | Kişisel Web Sitesi";
}


<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="hero-container" data-aos="fade-in">
        <h1>@Model.FirstName @Model.LastName</h1>
        <p><span class="typed" data-typed-items="Web Geliştirici, Web Tasarımcı, Freelancer"></span></p>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">
            <div class="section-title">
                <h2>Hakkımda</h2>
            </div>
            <div class="row">
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="~/images/@Model.Image.FileName" alt="@Model.FirstName @Model.LastName" class="img-fluid" >
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>@Model.Title</h3>
                    <p class="fst-italic">
                        @Model.Description
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>
                                        @{
                                            string originalDateTimeString = Model.Birthday.ToString();
                                            DateTime dateTime = DateTime.ParseExact(originalDateTimeString, "dd.MM.yyyy HH:mm:ss", null);
                                            string formattedDateTimeString = dateTime.ToString("dd/MM/yyyy");
                                        }
                                        @formattedDateTimeString
                                </span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon No:</strong> <span>@Model.PhoneNumber</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Konum</strong> <span>@Model.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li>
                                    <i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> 
                                    <span>
                                        @{
                                            var age = DateTime.Now - Model.Birthday;
                                            var years = (int)(age.Value.TotalDays / 365);
                                        }
                                        @years
                                    </span>
                                </li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@Model.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>Mevcut</span></li>
                            </ul>
                        </div>
                    </div>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </section><!-- End About Section -->

    <!-- ======= Skills Section ======= -->
    <section id="skills" class="skills section-bg">
        <div class="container">
            <div class="section-title">
                <h2>Yetenekler</h2>
                <p>Öğrenmeye ve geliştirmeye devam ettiğim yazılım teknolojileri.</p>
            </div>
            <div class="row skills-content">
                @await Component.InvokeAsync("Skill")
            </div>
        </div>
    </section><!-- End Skills Section -->

    <!-- ======= Resume Section ======= -->
    <section id="resume" class="resume">
        <div class="container">

            <div class="section-title">
                <h2>Özgeçmiş</h2>
                <p>Toplamda 9 aylık staj deneyimim ve detayları aşağıda yer almaktadır.</p>
            </div>

            <div class="row">
                <div class="col-lg-6" data-aos="fade-up">
                    <h4>@Model.FirstName @Model.LastName</h4>
                    @await Component.InvokeAsync("Summary")
                    @await Component.InvokeAsync("Education")
                </div>
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    @await Component.InvokeAsync("Experience")
                </div>
            </div>

        </div>
    </section><!-- End Resume Section -->

    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio section-bg">
        <div class="container">
            <div class="section-title">
                <h2>Portfolyo</h2>
                <p>Yaptığım çalışmalarla alakalı görseller aşağıda yer almaktadır. Çalışmalarda Javascript, Node.js, C# yazılım dilleri bulunmaktadır.</p>
            </div>
            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">
                @await Component.InvokeAsync("Portfolio")
            </div>
        </div>
    </section><!-- End Portfolio Section -->

    <!-- ======= Testimonials Section ======= -->
    <section id="testimonials" class="testimonials section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Referanslar</h2>
                <p>Tanıştığım saygıdeğer insanların hakkımdaki yorumları.</p>
            </div>

            <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
                <div class="swiper-wrapper">
                    @await Component.InvokeAsync("Testimonial")
                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Testimonials Section -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2>İletişim</h2>
                <p>Aşağıdaki formdan benimle iletişime geçebilirsiniz.</p>
            </div>

            <div class="row" data-aos="fade-in">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Konum:</h4>
                            <p>@Model.Address @Model.City</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>@Model.Email</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Telefon No:</h4>
                            <p>@Model.PhoneNumber</p>
                        </div>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24812.840803341227!2d-95.2512577079309!3d38.978684252289206!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87bf6fe7d7535e1b%3A0xd59117d5894cb837!2sThe%20Lawrence%20sign%2C%20Lawrence%2C%20KS!5e0!3m2!1str!2sus!4v1715611465386!5m2!1str!2sus" width="100%;" height="290px;" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">Your Name</label>
                                <input type="text" name="name" class="form-control" id="name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Your Email</label>
                                <input type="email" class="form-control" name="email" id="email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name">Subject</label>
                            <input type="text" class="form-control" name="subject" id="subject" required>
                        </div>
                        <div class="form-group">
                            <label for="name">Message</label>
                            <textarea class="form-control" name="message" rows="10" required></textarea>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="text-center"><button type="submit">Send Message</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->