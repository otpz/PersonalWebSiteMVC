@model ContactViewModel


<form asp-area="@null" asp-controller="Home" asp-action="AddContact" method="post" class="row" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group row mb-3">
        <label asp-for="FullName" class="col-sm-2 col-form-label">Ad Soyad</label>
        <div class="col-sm-10">
            <input asp-for="FullName" name="FullName" type="text" class="form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" name="Email" type="email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="Subject" class="col-sm-2 col-form-label">Konu</label>
        <div class="col-sm-10">
            <input asp-for="Subject" name="Subject" type="text" class="form-control">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="Message" class="col-sm-2 col-form-label">Mesaj</label>
        <div class="col-sm-10">
            <textarea asp-for="Message" name="Message" type="text" class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    </div>

</form><!-- End General Form Elements -->

