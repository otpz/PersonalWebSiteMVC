@model UserViewModel
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Profil Bilgilerim</h1>
      <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Profil | Güncelleme</li>
            </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Profili Güncelle</h5>
              @{
                @if (Model.Image != null)
                {
                    <img src="~/images/@Model.Image.FileName" class="mb-3" alt="@Model.FirstName" style="width:5em;" />
                }
              }
              <!-- General Form Elements -->
                <form asp-area="Admin" asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                
                <div class="row mb-3">
                  <label asp-for="FirstName" class="col-sm-2 col-form-label">Adı</label>
                  <div class="col-sm-10">
                    <input asp-for="FirstName" name="FirstName" type="text" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="LastName" class="col-sm-2 col-form-label">Soyadı</label>
                  <div class="col-sm-10">
                    <input asp-for="LastName" name="LastName" type="text" class="form-control">
                  </div>
                </div>


                <div class="row mb-3">
                  <label asp-for="Email" class="col-sm-2 col-form-label">E-mail</label>
                  <div class="col-sm-10">
                    <input asp-for="Email" name="Email" type="email" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="PhoneNumber" for="inputNumber" class="col-sm-2 col-form-label">Telefon No.</label>
                  <div class="col-sm-10">
                    <input asp-for="PhoneNumber" name="PhoneNumber" type="number" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="Birthday" class="col-sm-2 col-form-label">Doğum Tarihi</label>
                  <div class="col-sm-10">
                    <input asp-for="Birthday" name="Birthday" type="date" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="Website" class="col-sm-2 col-form-label">Web Sitesi</label>
                  <div class="col-sm-10">
                    <input asp-for="Website" name="Website" type="text" class="form-control">
                  </div>
                </div>

                 <div class="row mb-3">
                  <label asp-for="Address" class="col-sm-2 col-form-label">Adres</label>
                  <div class="col-sm-10">
                    <input asp-for="Address" name="Address" type="text" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="City" class="col-sm-2 col-form-label">Ülke | Şehir</label>
                  <div class="col-sm-10">
                    <input asp-for="City" name="City" type="text" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="Degree" class="col-sm-2 col-form-label">Derece</label>
                  <div class="col-sm-10">
                    <input asp-for="Degree" name="Degree" type="text" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="Description" class="col-sm-2 col-form-label">Açıklama | Özet</label>
                  <div class="col-sm-10">
                    <textarea asp-for="Description" name="Description" class="form-control" style="height: 100px"></textarea>
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="Image" class="col-sm-2 col-form-label">Profil Fotoğrafı</label>
                  <div class="col-sm-10">
                    <input asp-for="Image" name="Image" accept="image/*" class="form-control" type="file" id="formFile">
                  </div>
                </div>

                 <div class="row mb-3">
                  <label asp-for="Title" class="col-sm-2 col-form-label">Meslek | Başlık </label>
                  <div class="col-sm-10">
                     <input asp-for="Title" name="Title" type="text" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

      </div>
    </section>

  </main>