@model List<SocialMediaViewModel>
@{
    ViewBag.Title = "Admin | Sosyal Medyalar";
}
<main id="main" class="main" style="min-height: 550px;">

    <div class="pagetitle">
        <h1>Sosyal Medyalar</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Sosyal Medyalar</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <a asp-area="Admin" asp-controller="SocialMedia" asp-action="Add" class="btn btn-primary text-center mt-3">Sosyal Medya Ekle <i class="bi bi-plus-circle"></i> </a>

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Tüm Sosyal Medyalar</h5>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">URL Adresi</th>
                                    <th scope="col">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var socialMedia in Model)
                                {
                                    <tr class="align-middle">
                                        <td scope="row" class="" style="">
                                            <img src="~/images/@socialMedia.Image.FileName" class="" alt="@socialMedia.Title" style="width:40px; height:40px;" />
                                        </td>
                                        <td scope="row">@socialMedia.Title</td>
                                        <td scope="row">@socialMedia.Url</td>
                                        <td scope="row">
                                            <a asp-area="Admin" asp-controller="SocialMedia" asp-action="Delete" asp-route-socialMediaId="@socialMedia.Id" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>


