@model UserViewModel
<li class="nav-item dropdown pe-3">

    <a class="nav-link nav-profile d-flex align-items-center pe-0 user-select-none" data-bs-toggle="dropdown">
        @* <img src="~/dash/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle"> *@
        <img src="~/images/@Model.Image.FileName" class="rounded-circle" alt="@Model.FirstName @Model.LastName" />
        <span class="d-none d-md-block dropdown-toggle ps-2">@Model.FirstName @Model.LastName</span>
    </a><!-- End Profile Iamge Icon -->

    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile user-select-none">
        <li class="dropdown-header">
            <h6>@Model.FirstName @Model.LastName</h6>
            <span class="text-truncate">@Model.Title</span>
        </li>
        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a asp-area="Admin" asp-controller="User" asp-action="Update" class="dropdown-item d-flex align-items-center">
                <i class="bi bi-person"></i>
                <span>Profilim</span>
            </a>
        </li>
        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a asp-area="Admin" asp-controller="Auth" asp-action="Logout" class="dropdown-item d-flex align-items-center">
                <i class="bi bi-box-arrow-right"></i>
                <span>Çıkış Yap</span>
            </a>
        </li>
    </ul><!-- End Profile Dropdown Items -->
</li><!-- End Profile Nav -->