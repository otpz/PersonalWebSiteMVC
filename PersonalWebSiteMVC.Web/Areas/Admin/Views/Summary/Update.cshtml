@model Summary
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Özet Bilgilerim</h1>
      <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Özet Güncelleme</li>
            </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Özeti Güncelle</h5>
              <!-- General Form Elements -->
                <form asp-area="Admin" asp-controller="Summary" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input asp-for="Id" name="Id" type="hidden" value="1" class="form-control">
                    <div class="row mb-3">
                      <label asp-for="Title" class="col-sm-2 col-form-label">Meslek | Başlık </label>
                      <div class="col-sm-10">
                         <input asp-for="Title" name="Title" type="text" class="form-control">
                     </div>
                    </div>

                    <div class="row mb-3">
                      <label asp-for="Email" class="col-sm-2 col-form-label">E-mail</label>
                      <div class="col-sm-10">
                        <input asp-for="Email" name="Email" type="email" class="form-control">
                    </div>
                    </div>

                    <div class="row mb-3">
                      <label asp-for="PhoneNumber" for="inputNumber" class="col-sm-2 col-form-label">Telefon No.</label>
                      <div class="col-sm-10">
                        <input asp-for="PhoneNumber" name="PhoneNumber" type="number" class="form-control">
                    </div>
                    </div>

                     <div class="row mb-3">
                      <label asp-for="Address" class="col-sm-2 col-form-label">Adres</label>
                      <div class="col-sm-10">
                        <input asp-for="Address" name="Address" type="text" class="form-control">
                    </div>
                    </div>

                    <div class="row mb-3">
                      <label asp-for="Description" class="col-sm-2 col-form-label">Açıklama | Özet</label>
                      <div class="col-sm-10">
                        <textarea asp-for="Description" name="Description" class="form-control" style="height: 100px"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="row mb-3">
                      <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Özeti Güncelle</button>
                      </div>
                    </div>
              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

      </div>
    </section>

  </main>