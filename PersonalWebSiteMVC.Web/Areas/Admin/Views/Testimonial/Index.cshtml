@model List<Testimonial>
@{
    ViewBag.Title = "Admin | Referanslar";
}
<main id="main" class="main" style="min-height: 550px;">

    <div class="pagetitle">
        <h1>Referanslar</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Referanslar</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <a asp-area="Admin" asp-controller="Testimonial" asp-action="Add" class="btn btn-primary text-center mt-3">Referans Ekle <i class="bi bi-plus-circle"></i> </a>

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Tüm Referanslar</h5>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">İsim</th>
                                    <th scope="col">Mesleği</th>
                                    <th scope="col">Mesajı</th>
                                    <th scope="col">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var testimonial in Model)
                                {
                                    <tr class="align-middle">
                                        <td scope="row">@testimonial.FirstName @testimonial.LastName</td>
                                        <td scope="row">@testimonial.Job</td>
                                        <td scope="row">@testimonial.Message</td>
                                        <td scope="row">
                                            <a asp-area="Admin" asp-controller="Testimonial" asp-action="Delete" asp-route-testimonialId="@testimonial.Id" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main>


