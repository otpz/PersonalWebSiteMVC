@model EducationAddViewModel
@{
    ViewBag.Title = "Admin | Eğitim Ekle ";
}
<main id="main" class="main" style="min-height: 550px;">
    <div class="pagetitle">
        <h1>Eğitimler</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Education" asp-action="Index">Eğitimler</a></li>
                <li class="breadcrumb-item active">Eğitim Ekle</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Eğitim Ekleyin</h5>
                        <!-- General Form Elements -->
                        <form asp-area="Admin" asp-controller="Education" asp-action="Add" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                           
                            <div class="row mb-3">
                                <label asp-for="Title" class="col-sm-2 col-form-label">Eğitim Başlığı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" name="Title" type="text" class="form-control">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Year" class="col-sm-2 col-form-label">Eğitim Yılları</label>
                                <div class="col-sm-10">
                                    <input placeholder="örn. 2012 - 2016" asp-for="Year" name="Year" type="text" class="form-control">
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Address" class="col-sm-2 col-form-label">Eğitim Yeri</label>
                                <div class="col-sm-10">
                                    <input asp-for="Address" name="Address" type="text" class="form-control">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Eğitim Açıklaması</label>
                                <div class="col-sm-10">
                                    @* <input asp-for="Description" name="Description" type="text" class="form-control"> *@
                                    <textarea asp-for="Description" name="Description" type="text" class="form-control">
                                    </textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Eğitimi Ekle</button>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>