@model List<TalentViewModel>
@{
    ViewBag.Title = "Admin | Yetenekler";
}
<main id="main" class="main" style="min-height: 550px;">

    <div class="pagetitle">
        <h1>Yetenekler</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Yetenekler</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Tüm Yetenekler</h5>
                            <a asp-area="Admin" asp-controller="Talent" asp-action="Add" class="btn btn-primary text-center">Yetenek Ekle <i class="bi bi-plus-circle"></i> </a>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Yetenek Adı</th>
                                    <th scope="col">İlerleme</th>
                                    <th scope="col">Oluşturulma Tarihi</th>
                                    <th scope="col">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var talent in Model)
                                {
                                    <tr class="align-middle">
                                        <td scope="row" class="" style="">
                                            <img src="~/images/@talent.Image.FileName" class="" alt="@talent.Name" style="width:40px; height:40px;" />
                                        </td>
                                        <td scope="row">@talent.Name</td>
                                        <td scope="row">@talent.Progress</td>
                                        <td scope="row">@talent.CreatedDate</td>
                                        <td scope="row">
                                            <a asp-area="Admin" asp-controller="Talent" asp-action="Delete" asp-route-talentId="@talent.Id" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>


