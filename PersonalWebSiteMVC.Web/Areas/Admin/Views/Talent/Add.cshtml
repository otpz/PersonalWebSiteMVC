@model TalentAddViewModel
@{
    ViewBag.Title = "Admin | Yetenek Ekle ";
}
<main id="main" class="main" style="min-height: 550px;">
    <div class="pagetitle">
        <h1>Yetenekler</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Talent" asp-action="Index">Yetenekler</a></li>
                <li class="breadcrumb-item active">Yetenek Ekle</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yetenek Ekleyin</h5>
                        <!-- General Form Elements -->
                        <form asp-area="Admin" asp-controller="Talent" asp-action="Add" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="row mb-3">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Yetenek Adı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" name="Name" type="text" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Progress" class="col-sm-2 col-form-label">Seviye</label>
                                <div class="col-sm-10">
                                    <input asp-for="Progress" name="Progress" type="number" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Photo" class="col-sm-2 col-form-label">İkon Ekle</label>
                                <div class="col-sm-10">
                                    <input asp-for="Photo" name="Photo" accept="image/*" class="form-control" type="file" id="formFile">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Yeteneği Ekle</button>
                                </div>
                            </div>
                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>