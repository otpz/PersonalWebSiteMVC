@model List<ExperienceListViewModel>
@{
    ViewBag.Title = "Admin | Deneyimler";
}
<main id="main" class="main" style="min-height: 550px;">

    <div class="pagetitle">
        <h1>Deneyimler</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Deneyimler</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <a asp-area="Admin" asp-controller="Experience" asp-action="Add" class="btn btn-primary text-center mt-3">Deneyim Ekle <i class="bi bi-plus-circle"></i> </a>

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Tüm Deneyimler</h5>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Yıl</th>
                                    <th scope="col">Deneyim Yeri</th>
                                    <th scope="col">Oluşturulma Tarihi</th>
                                    <th scope="col">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var experience in Model)
                                {
                                    <tr class="align-middle">
                                        <td scope="row">@experience.Title</td>
                                        <td scope="row">@experience.Year</td>
                                        <td scope="row">@experience.Address</td>
                                        <td scope="row">@experience.CreatedDate</td>
                                        <td scope="row">
                                            <a asp-area="Admin" asp-controller="Experience" asp-action="Delete" asp-route-experienceId="@experience.Id" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main>


