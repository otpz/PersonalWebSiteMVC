@model ExperienceAddViewModel
@{
    ViewBag.Title = "Admin | Deneyim Ekle ";
}

@* <script src="https://cdn.ckeditor.com/4.19.0/full/ckeditor.js"></script> *@

<main id="main" class="main" style="min-height: 550px;">
    <div class="pagetitle">
        <h1>Deneyimler</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Experience" asp-action="Index">Deneyimler</a></li>
                <li class="breadcrumb-item active">Deneyim Ekle</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Deneyim Ekleyin</h5>
                        <!-- General Form Elements -->
                        <form asp-area="Admin" asp-controller="Experience" asp-action="Add" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="row mb-3">
                                <label asp-for="Title" class="col-sm-2 col-form-label">Deneyim Başlığı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" name="Title" type="text" class="form-control">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Year" class="col-sm-2 col-form-label">Deneyim Yılları</label>
                                <div class="col-sm-10">
                                    <input placeholder="örn. 2012 - 2016" asp-for="Year" name="Year" type="text" class="form-control">
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Address" class="col-sm-2 col-form-label">Deneyim Yeri</label>
                                <div class="col-sm-10">
                                    <input asp-for="Address" name="Address" type="text" class="form-control">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Deneyim Açıklaması</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" name="Description" type="text" class="form-control"></textarea>
                                    <script>
                                        CKEDITOR.replace("Description")
                                    </script>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Deneyimi Ekle</button>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>